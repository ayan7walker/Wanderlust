<% layout("layouts/boilerplate") %>

<script>
</script>

<div class="custom-container mt-5">

  <h3 class="mb-4 text-center fw-bold">
    <%= listing.title %>
  </h3>

  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <img 
          src="<%= listing.imageURL || listing.image %>" 
          class="card-img-top"
          style="height: 350px; object-fit: cover;"
          alt="<%= listing.title %>"
        />

        <div class="card-body">
          <p class="text-muted mb-1">
            Owned by <strong>
              <%= listing.owner ? listing.owner.username : "Unknown host" %>
            </strong>
          </p>

          <p class="mt-3"><%= listing.description %></p>

          <p class="fw-bold fs-5">
            ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night
          </p>

          <p class="text-secondary">
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>

      <div class="d-flex gap-3 mt-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>

      <div class="mt-5">
        <hr />
        <h4 class="mb-3">Leave a Review</h4>

        <form 
          action="/listings/<%= listing._id %>/reviews" 
          method="POST" 
          class="needs-validation"
          novalidate
        >

          <div class="mb-3 mt-3">
            <label class="form-label">Rating</label>

            <fieldset class="starability-slot">

              <input 
                type="radio" 
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />

              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1">1 star</label>

              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2">2 stars</label>

              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3">3 stars</label>

              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4">4 stars</label>

              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5">5 stars</label>

            </fieldset>
          </div>

          <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea 
              name="review[comment]" 
              rows="4" 
              class="form-control"
              required
            ></textarea>
          </div>

          <button class="btn btn-outline-dark">Submit Review</button>
        </form>

        <!-- ✅ BUG FIXED HERE -->
        <% if (listing.reviews && listing.reviews.length > 0) { %>

          <hr class="mt-5" />
          <h5 class="fw-bold mb-3">All Reviews</h5>

          <div class="row">
            <% for (let review of listing.reviews) { %>
              <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h6 class="fw-bold mb-1"><%= review.author.username %></h6>

                    <p class="starability-result" data-rating="<%= review.rating %>"></p>

                    <p><%= review.comment %></p>
                    <small class="text-muted"><%= review.rating %> ★</small>
                  </div>

                  <form 
                    method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                    class="p-2"
                  >
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>

                </div>
              </div>
            <% } %>
          </div>

        <% } %>
      </div>

      <div class="col-6 offset-3 mb-3">
        <h3>
          Where you'll be
          <div id="map"
          
            data-lat="<%= listing.geometry?.lat %>"
            data-lng="<%= listing.geometry?.lng %>"
            data-address="<%= listing.location %>, <%= listing.country %>">
          </div>
        </h3>
      </div>

    </div>
  </div>
</div>

<script src="/js/map.js"></script>
