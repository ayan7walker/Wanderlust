<% layout("layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1rem 2rem;
    border-bottom: 1px solid #eee;
  }

  .filters-left {
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
  }

  .filter {
    flex: 1;
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
  }

  .filter:hover {
    opacity: 1;
  }

  .filter i {
    font-size: 1.4rem;
    display: block;
    margin-bottom: 0.3rem;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }
</style>

<!-- ===== FILTER BAR ===== -->
<div id="filters">

  <div class="filters-left">

    <a href="/listings?category=Trending" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </a>

    <a href="/listings?category=Rooms" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=Iconic Cities" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </a>

    <a href="/listings?category=Mountains" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </a>

    <a href="/listings?category=Castle" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-hotel"></i>
      <p>Castle</p>
    </a>

    <a href="/listings?category=Amazing Pools" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pools</p>
    </a>

    <a href="/listings?category=Camping" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </a>

    <a href="/listings?category=Farms" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </a>

    <a href="/listings?category=Arctic" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-rainbow"></i>
      <p>Arctic</p>
    </a>

    <a href="/listings?category=Dome" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-igloo"></i>
      <p>Dome</p>
    </a>

    <a href="/listings?category=Island" class="filter text-dark text-decoration-none">
      <i class="fa-solid fa-sailboat"></i>
      <p>Island</p>
    </a>

  </div>

  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse mb-0">
      <input class="form-check-input" type="checkbox" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>

</div>

<!-- ===== LISTINGS ===== -->
<div class="container mt-4">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">

    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card listing-card shadow-sm rounded-4 overflow-hidden h-100">

            <img
              src="<%= listing.imageURL %>"
              class="card-img-top"
              style="height: 20rem; object-fit: cover;"
            />

            <div class="card-body">
              <p class="mb-1"><b><%= listing.title %></b></p>
              <p class="text-muted mb-1"><%= listing.location %>, <%= listing.country %></p>
              <p class="fw-bold">
                â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tax-info">&nbsp; +18% GST</i>
              </p>
            </div>

          </div>
        </a>
      </div>
    <% } %>

  </div>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("change", () => {
    const taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display =
        info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>




